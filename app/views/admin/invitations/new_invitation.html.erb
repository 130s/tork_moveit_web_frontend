<h2>Invite a new user</h2>

<%= form_for @user, :url => send_invitation_admin_invitations_path do |f| %>

  <table style='width: 50%'>
    <tr>
      <td><%= f.label :email %></td>
      <td><%= f.text_field :email, :required => true %></td>
    </tr>
  </table>

  <%= f.submit  "Send Invitation" %>
<% end %>